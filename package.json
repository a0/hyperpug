{
  "name": "hyperpug",
  "version": "1.3.1",
  "license": "MIT",
  "files": [
    "lib",
    "src",
    "tsconfig.json"
  ],
  "description": "Pug for browser, based on Hyperscript",
  "main": "lib/index.js",
  "unpkg": "lib/index.min.js",
  "types": "lib/index.d.ts",
  "author": {
    "name": "Pacharapol Withayasakpunt",
    "email": "patarapolw@gmail.com",
    "url": "https://www.polv.cc"
  },
  "repository": "github:patarapolw/hyperpug",
  "keywords": [
    "pug",
    "hyperscript"
  ],
  "scripts": {
    "prebuild": "yarn lint && yarn test",
    "build": "tsc -p src/tsconfig.json",
    "browserify": "parcel build -d lib -o index.min.js ./browser.ts",
    "test": "ts-mocha --paths -p tests/tsconfig.json tests/**/*.spec.ts",
    "web": "parcel web/index.html",
    "deploy": "parcel build --public-url /hyperpug web/index.html && gh-pages -d dist",
    "prepack": "yarn build && yarn browserify",
    "lint": "eslint '**'"
  },
  "dependencies": {
    "indent-utils": "^1.0.2"
  },
  "devDependencies": {
    "@types/codemirror": "^0.0.84",
    "@types/js-yaml": "^3.12.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.6",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "eslint": ">=6.2.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": ">=2.18.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-node": ">=9.1.0",
    "eslint-plugin-promise": ">=4.2.1",
    "eslint-plugin-standard": ">=4.0.0",
    "gh-pages": "^2.2.0",
    "js-yaml": "^3.13.1",
    "mocha": "^6.0.0",
    "parcel-bundler": "^1.12.4",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.9.5"
  }
}
